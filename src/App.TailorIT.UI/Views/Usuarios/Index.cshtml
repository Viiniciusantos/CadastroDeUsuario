@model IEnumerable<App.TailorIT.Application.ViewModels.UsuarioViewModel>
@{
    ViewData["Title"] = "Lista de usuários";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-12">
        <div class="btn-group float-right mb-2">
            <a class="btn btn-info" asp-action="Create"><span class="fa fa-plus"></span> Novo</a>
            <a class="btn btn-warning filter" data-toggle="modal" data-target="#filterModal"><span class="fa fa-filter"></span> Filtro</a>
        </div>
        <div class="relatorio">
            <partial name="_Index" />
        </div>
    </div>
</div>

<div class="modal" id="filterModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Filtros</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="col-12">
                    <div class="form-group">
                        <label class="control-label"></label>
                        <input type="text" class="form-control" id="nomeFilter"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label"></label>
                        <select class="form-control" id="sexosFilters">
                            <option></option>
                            @foreach (var item in Model.ToList()[0].Sexos)
                            {
                                <option value="@item.SexoId">@item.Descricao</option>
                            }
                        </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="filter()" class="btn btn-success" data-dismiss="modal">Filtrar</button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>